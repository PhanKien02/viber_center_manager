{
        "files.associations": {
                "*.tsx": "typescriptreact",
                "*.ts": "typescript",
                "*.jsx": "javascriptreact",
                "*.js": "javascript",
                "*.json": "json",
                "*.css": "css",
                "*.md": "markdown",
                "*.yml": "yaml",
                "*.yaml": "yaml"
        },
        "search.exclude": {
                "**/node_modules": true,
                "**/bower_components": true,
                "**/.next": true,
                "**/dist": true,
                "**/build": true,
                "**/.git": true,
                "**/.yarn": true
        },
        "files.exclude": {
                "**/.git": true,
                "**/.DS_Store": true,
                "**/node_modules": false
        },
        "typescript.tsdk": "node_modules/typescript/lib",
        "typescript.enablePromptUseWorkspaceTsdk": true,
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "[typescriptreact]": {
                "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[typescript]": {
                "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[javascript]": {
                "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[json]": {
                "editor.defaultFormatter": "esbenp.prettier-vscode"
        }
}